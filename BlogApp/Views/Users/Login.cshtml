@model LoginView

<div class="row bg-white rounded">
    <div class="col-12 mb-2">
        <h1>Login</h1>
        <form action="Login" method="post">

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Kullanıcı mail adresi</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-summary="ModelOnly" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Kullanıcı Şifresi</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-summary="ModelOnly" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <button class="btn btn-primary">Giriş</button>
        </form>
    </div>
</div>